#artist-show
  .artist-wrapper
    .artist-img
      -# %img{src: @artist.image}
      %img{src: 'https://s3-us-west-1.amazonaws.com/art-culture/brooke-cagle-241290-unsplash.jpg'}
    .artist-details
      .artist-name
        %h3=@artist.full_name
      .artist-location
        %i.fas.fa-map-marker-alt
        %p="Los Angeles, California"
      .artist-bio
        %p=@artist.bio
  .current-listed-art
    %h2 CURRENT LISTED ART
    .current-listings
      -@current_listings.each do |listing|
        .listing
          %img{src: listing.artwork_images[0].url}
          %h3=listing.title
          %p=listing.description
  =react_component 'ArtworkCirculationCarousel', props: {artworks: @artworks_in_circulation}, prerender: false

  .related-artists
    %h2 RELATED ARTISTS
    .related-artists-wrapper
      -@related_artists.each do |artist|
        .related-artist-wrapper
          .artist-img
            -# %img{src: @artist.image}
            %img{src: 'https://s3-us-west-1.amazonaws.com/art-culture/brooke-cagle-241290-unsplash.jpg'}
          .artist-details
            .artist-name
              %h3=artist.full_name
            .artist-bio
              %p=artist.bio
